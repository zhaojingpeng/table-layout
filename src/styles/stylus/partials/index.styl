site-table()
  display table
  width 100%
  border-collapse:separate
  border-spacing:30px 15px
  margin 0

wrap()
  max-width: 1140px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30px;
  margin-bottom: 30px;
  overflow hidden
  .inner
    height: auto;
    line-height: auto;
    text-align: center;
    margin 0 -30px

.Responsive
  wrap()
  .row
    site-table()
    background-color #42cafd
    div
      display table-cell
      background-color darken(#42cafd, 10%)
      margin-right 30px
      @media mq-tablet
        display block
        width 100%

.Offset
  wrap()
  .row
    background-color #66b3ba
    site-table()
    div
      display table-cell
      background-color darken(#66b3ba, 10%)
      &:nth-of-type(2)
        visibility hidden
      
.Nesting
  wrap()
  .row
    background-color #8eb19d
    site-table()
    > div
      display table-cell
      background-color darken(#8eb19d, 10%)
      &:last-child
        width 360px
        .inner > div
          site-table()
          border-spacing:30px 0px
          > div
            background-color #68977c
            display table-cell
