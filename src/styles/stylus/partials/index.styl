.Alignment
  .row
    background-color #f0d2d1
    site-table()
    border-spacing:400px 100px
    > div
      display table-cell
      background-color #e5b1af

.Cycle
  wrap()
  .row
    background-color #f19a3e
    site-table()
    table-layout: fixed
    margin 0
    div
      display table-cell
      background-color #ef8b22
      text-align left
      line-height 24px
      max-width 340px
      
.Vertical
  wrap()
  .inner
    margin -45px 0
    background-color #1e90ff
    border-spacing:0px 30px
    div
      display table
      size 100% 160px
      line-height 160px
      background-color #0182ff
      margin-bottom 30px

.Waffle
  wrap()
  .inner
    margin -45px -30px
  .row
    background-color #ff6347
    site-table()
    border-spacing 30px 15px
    margin 0
    div
      display table-cell
      background-color #ff4726

.Varying
  wrap()
  .row
    background-color #00ff7f
    site-table()
    table-layout fixed
    div
      display table-cell
      background-color #00e672

.Source
  wrap()
  .row
    background-color #5f9ea0
    site-table()
    div
      display table-cell
      background-color #568e90